<div class="">
  <% if !!flash[:alert] %>
    <%= flash[:alert] %>
  <% end %>
</div>

<h1><%= @business.name %></h1>

<div class="">
  <label>Price Range: </label>
  <%= @business.price_range %><br />
  <label>Description: </label>
  <%= @business.description %><br />
  <label>Location: </label>
  <%= @business.location.city %><br />
  <label>Cryptocurrencies accepted: </label><br />
  <ul>
    <% @business.cryptos.each do |c| %>
      <li><%= c.name %></li>
    <% end %>
  </ul>
</div>

<div class="">
  <%= link_to "Delete Business", biz_path(@business), :method => :delete, :confirm => "Are you sure?" %> |
  <%= link_to "Edit Information", edit_biz_path(@business) %>
</div>
