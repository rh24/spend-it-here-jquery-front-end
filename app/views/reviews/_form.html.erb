<% if review.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(review.errors.count, "error") %> prohibited this post from being saved
    </h2>

    <ul>
      <% review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div>
  <%= form_for review do |f| %>
    <div>
      <label>Which business are you reviewing?</label>
      <%= f.collection_select :business_id, Business.all, :id, :name, include_blank: true %><br /><br />
      <label>Or enter new business here: </label>
      <%= render 'businesses/form' %><br />
    </div>
    <div>
      <%= f.text_field :title, :placeholder => "Your title here...", :size => "50" %><br /><br />
    </div>
    <div>
      <%= f.text_area :comment, :placeholder => "How was your experience?", :size => "48" %><br />
    </div>
    <div>
      <%= f.radio_button :would_recommend, :checked => true %>
      <%= label :would_recommend, "Check, if you'd recommend this place to a friend" %>
    </div>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  <% end %>
</div>
